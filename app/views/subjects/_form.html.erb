<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @subject, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter Subject title" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_field :description, class: "form-control", placeholder: "Enter subject description" %>
        </div>

        <div class="mb-3">
          <%= form.label :lecturer_id, class: "form-label" %>
          <%= form.collection_select :lecturer_id, Lecturer.all, :id, :name, { prompt: "Select Lecturer" }, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= form.label :start_time, class: "form-label" %>
          <%= form.time_field :start_time, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :end_time, class: "form-label" %>
          <%= form.time_field :end_time, class: "form-control" %>
        </div>

        <%= form.submit "Save", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

