<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- User Information -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">User Information</h5>
          <p class="card-text">Mail: <%= current_user.email %></p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title text-center font-weight-bold"><%= @request.subject.title %></h2>
          <p class="card-text text-center text-muted"><%= @request.subject.start_time.strftime("%H:%M") %> - <%= @request.subject.end_time.strftime("%H:%M") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
